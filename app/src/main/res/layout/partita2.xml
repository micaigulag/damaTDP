<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_planks"
    android:layout_gravity="center_horizontal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L'Avversario sta decidendo la mossa..."
        android:layout_weight="0"
        android:padding="10dp"
        android:id="@+id/messaggiDiGioco"
        android:textColor="@color/black"
        android:background="#AFFFFFFF"
        android:layout_marginTop="100dp"
        />

    <com.example.dama.campoDiGioco
        android:id="@+id/GameField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turno pedine bianche"
        android:layout_weight="0"
        android:padding="10dp"
        android:id="@+id/indicatoreTurni"
        android:textColor="@color/black"
        android:background="#AFFFFFFF"
        android:layout_marginTop="100dp"
        />


</LinearLayout>